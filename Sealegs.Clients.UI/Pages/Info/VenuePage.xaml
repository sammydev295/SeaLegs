<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Sealegs.Clients.UI.VenuePage"
    xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
    Title="Maps"
    NavigationPage.BackButtonTitle="Info"
    BackgroundColor="{x:DynamicResource WindowBackgroundTable}">
        <Grid RowSpacing="0" ColumnSpacing="{StaticResource StandardSpacing}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <maps:Map 
                    x:Name="EvolveMap"
                    IsShowingUser="false" 
                    MapType="Street" />
            <StackLayout Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="End"
             BackgroundColor="#99FFFFFF" Padding="{x:DynamicResource StandardPadding}">
                <Image Source="hotel_logo.png" HorizontalOptions="Center" VerticalOptions="Center"/>
            </StackLayout>
        </Grid>
</ContentPage>
