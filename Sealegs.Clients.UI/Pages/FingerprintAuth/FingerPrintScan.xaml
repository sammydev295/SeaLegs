<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sealegs.Clients.UI.Pages.FingerprintAuth.FingerPrintScan"
             Title="Sealegs">
    <ContentPage.Content>
        <StackLayout Margin="20,0">
            <Button TextColor="{StaticResource PrimaryDark}" Text="Click Here to Scan" Command="{Binding FingerScanCommand}"
                    VerticalOptions="CenterAndExpand"></Button>

            <Button TextColor="{StaticResource PrimaryDark}" Text="Go to Login" Command="{Binding LoginCommand}"
                    VerticalOptions="EndAndExpand" Margin="0,20"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>